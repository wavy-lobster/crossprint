{
  "name": "crossprint",
  "version": "1.0.1",
  "description": "CrossPrint is a lightweight library that enables you to convert HTML or any supported framework cross-browser",
  "files": [
    "dist/**/*"
  ],
  "exports": {
    "./*": {
      "default": "./dist/**/*"
    }
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --project tsconfig.build.json && npm run copy",
    "copy": "ncp ./package.json ./dist/package.json && ncp ./README.md ./dist/README.md && ncp ./LICENSE ./dist/LICENSE",
    "clean": "rm -rf ./lib/",
    "cm": "cz",
    "lint": "eslint ./src/ --fix",
    "prepare": "is-ci || husky install",
    "semantic-release": "semantic-release",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wavy-lobster/crossprint.git"
  },
  "license": "MIT",
  "author": {
    "name": "Jwan Karo",
    "url": "https://github.com/jwankaro"
  },
  "engines": {
    "node": ">=12.0"
  },
  "keywords": [
    "react",
    "svelte",
    "solidjs",
    "typescript",
    "javascript",
    "print",
    "pdf"
  ],
  "bugs": {
    "url": "https://github.com/wavy-lobster/crossprint/issues"
  },
  "homepage": "https://github.com/wavy-lobster/crossprint#readme",
  "devDependencies": {
    "@types/jest": "^27.5.2",
    "@types/node": "^12.20.55",
    "@types/react": "^18.0.28",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "commitizen": "^4.3.0",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "husky": "^6.0.0",
    "is-ci": "^3.0.1",
    "lint-staged": "^10.5.4",
    "ncp": "^2.0.0",
    "prettier": "^2.8.4",
    "react": "^18.2.0",
    "semantic-release": "^19.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "config": {},
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "dist"
        }
      ]
    ]
  }
}